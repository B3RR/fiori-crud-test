     displayBlock="true">
    <Shell>
		<App class="myAppDemoWT">
			<pages>
				<Page title="{i18n>homePageTitle}">
					<headerContent>
						<Button
							icon="sap-icon://hello-world"
							press=".onOpenDialog"/>
					</headerContent>
                    <content>
						<mvc:XMLView viewName="gonis.fiori-crud-test.view.HelloPanel"/>
